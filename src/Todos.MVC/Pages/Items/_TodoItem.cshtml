@model Todos.MVC.Models.TodoItem
@{
}

<div class="container mt-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title" id="todo-1">Todo: @Model.Todo</h5>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="completed-1" checked>
                <label class="form-check-label" for="completed-1">@Model.Completed</label>
            </div>
            <p class="card-text">User ID: @Model.UserId</p>
        </div>
    </div>
</div>