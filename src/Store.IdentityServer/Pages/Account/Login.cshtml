@page
@model Store.IdentityServer.Pages.Account.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Credentials.UserName"></label>
                            <input asp-for="Credentials.UserName" type="text" class="form-control" placeholder="Enter your username">
                            <span asp-validation-for="Credentials.UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Credentials.Password"></label>
                            <input asp-for="Credentials.Password" type="password" class="form-control" placeholder="Enter your password">
                            <span asp-validation-for="Credentials.Password"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
